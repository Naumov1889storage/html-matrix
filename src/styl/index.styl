/*RULES BEGIN ==============*/
.rules {
	min-height: 720px
	.flex_row__between {
		flex-flow: wrap
	}
	.rules_item {
		margin-bottom: 50px;
		width: 27%
		transition .3s
		b, p {
			padding-left: 21px
			font-size: 14px
		}
		b {
			display: block
			margin-bottom: 18px;
			border-left: 3px solid #888888
			line-height: 24px
		}
		&:nth-child(1):hover,
		&:nth-child(2):hover,
		&:nth-child(3):hover,
		&:nth-child(4):hover,
		&:nth-child(5):hover,
		&:nth-child(6):hover {
			position: relative
			padding-top: 60px
			b {
				font-size: 16px
			}
			&::before {
				content: ""
				position: absolute
				top: 0
				left: 21px
				width: 77px
				height: 46px
				background: url(../img/iconset.png)
			}
		}
		&:nth-child(1):hover {
			&::before {
				background-position: 96px 2px
			}
		}
		&:nth-child(2):hover {
			&::before {
				background-position: 187px -67px
			}
		}
		&:nth-child(3):hover {
			&::before {
				background-position: 96px -65px
			}
		}
		&:nth-child(4):hover {
			&::before {
				background-position: 96px -138px
			}
		}
		&:nth-child(5):hover {
			&::before {
				background-position: 96px -204px
			}
		}
		&:nth-child(6):hover {
			&::before {
				background-position: 182px 2px
			}
		}
	}
}


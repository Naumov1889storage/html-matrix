@import "common"

.bottom-to-top {
	position: fixed
	top: 0
	left: -300px
	padding: 70vh 0 0 35px
	width: 105px
	height: 100vh
	color: rgba(0, 0, 0, .6)
	background: rgba(0, 0, 0, .01)
	transition: .3s
	&:hover {
		color: rgba(0, 0, 0, .8)
		background: rgba(0, 0, 0, .04)
		&::before {
			border-left: 2px solid rgba(0, 0, 0, .6)
			border-top: 2px solid rgba(0, 0, 0, .6)
		}
	}
	&::before {
		content: ""
		position: absolute
		top: 71vh
		left: 15px
		width: 7px
		height: 7px
		border-left: 2px solid rgba(0, 0, 0, .4)
		border-top: 2px solid rgba(0, 0, 0, .4)
		transform: rotate(45deg)
		transition: .3s
	}
}

.bottom-to-top_fixed {
	left: 0
}

@media (max-width: 1400px) {
    .bottom-to-top_fixed {
	    display: none
    }
}

